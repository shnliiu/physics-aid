generator client {
  provider = "prisma-client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


enum Role {
  STUDENT
  TEACHER
  ADMIN
}

model User {
  id        String   @id @db.Uuid // Matches Supabase Auth ID
  email     String   @unique
  fullName  String?
  avatarUrl String?
  role      Role     @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Example relation: Users might have Problems they created or bookmarked
  // problems Problem[] 
}
